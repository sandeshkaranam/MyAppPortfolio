<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#E3F2FD">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Spotify Steamer"
        android:id="@+id/spotify_steamer_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:onClick="buttonClick"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/scores_app_button"
        android:layout_below="@+id/spotify_steamer_button"
        android:layout_centerHorizontal="true"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:onClick="buttonClick"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/library_app_button"
        android:layout_below="@+id/scores_app_button"
        android:layout_centerHorizontal="true"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:onClick="buttonClick"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/build_it_bigger_button"
        android:layout_below="@+id/library_app_button"
        android:layout_centerHorizontal="true"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:onClick="buttonClick"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/xyz_reader_button"
        android:layout_below="@+id/build_it_bigger_button"
        android:layout_centerHorizontal="true"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:onClick="buttonClick"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/capstone_button"
        android:layout_below="@+id/xyz_reader_button"
        android:layout_centerHorizontal="true"
        android:background="#3F51B5"
        android:layout_marginBottom="10dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:onClick="buttonClick"/>

    <TextView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/my_nanodegree_apps"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />
</RelativeLayout>
